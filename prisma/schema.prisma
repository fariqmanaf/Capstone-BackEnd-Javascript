generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("mahasiswa")
  nim       String   @unique
  noHp      String
  dokumen Dokumen[]
  logbook Logbook[]
  detailLogbook DetailLogbook[]
  topik Topik[]
  topikDetail TopikDetail[]
}

model Dokumen {
  id        String   @id @default(cuid())
  userId  String @unique
  transkripNilai String
  cv String
  dropMatakuliah String
  jumlahMatakuliah String
  user User @relation(fields: [userId], references: [id])
}

model Logbook {
  id        String   @id @default(cuid())
  userId  String
  progress String
  nama String?
  user User @relation(fields: [userId], references: [id])
  detailLogbook DetailLogbook[]
  tglDibuka DateTime
  tglTerakhir DateTime
}


model DetailLogbook {
  id        String   @id @default(cuid())
  user_id  String
  logbookId  String
  namaDosen String
  target String
  kendala String
  tanggal String
  output String
  rincianKegiatan String
  buktiKegiatan String
  logbook Logbook @relation(fields: [logbookId], references: [id])
  user User @relation(fields: [user_id], references: [id])
  uploadAt DateTime
}

model Topik {
  id        String   @id @default(cuid())
  nama      String
  deskripsi String
  userId   String
  user User @relation(fields: [userId], references: [id])
  topikDetail TopikDetail[]
  role Role[]
}

model Role{
  id        String   @id @default(cuid())
  topikId   String
  nama      String
  topik Topik @relation(fields: [topikId], references: [id])
}

model TopikDetail {
  id        String   @id @default(cuid())
  topikId   String
  nama      String
  nim       String
  prodi     String
  role1    String
  role2    String
  noHp     String
  user_id   String
  topik Topik @relation(fields: [topikId], references: [id])
  user User @relation(fields: [user_id], references: [id])
  konfirmasi String @default("belum")
}